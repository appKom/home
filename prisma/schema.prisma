generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Article {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  imageUri         String
  imageDescription String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  authorId         Int
}

enum RoleType {
  Leder
  Nestleder
  Ã˜konomiansvarlig
  Medlem
}

model Role {
  id        Int      @id @default(autoincrement())
  period    String
  role      RoleType
  member    Member   @relation(fields: [memberId], references: [id])
  memberId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([memberId, period])
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  imageUri  String
  isActive  Boolean
  roles     Role[]
  about     String?
  quote     String?
  email     String?
  phone     String?
  github    String?
  linkedin  String?
  createdAt DateTime @default(now())
}
