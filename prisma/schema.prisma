generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  imageUri         String
  imageDescription String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  authorId         Int
}
