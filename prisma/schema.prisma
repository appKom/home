generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Article {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  imageUri         String
  imageDescription String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  authorId         Int
}

enum RoleEnum {
  Leder
  Nestleder
  Ã˜konomiansvarlig
  Medlem
}

model Member {
  id            Int            @id @default(autoincrement())
  name          String
  href          String         @unique
  imageUri      String         @default("/medlemmer/default_profile_picture.png")
  isCurrent     Boolean
  about         String?
  quote         String?
  email         String?        @unique
  phone         String?
  github        String?        @unique
  linkedin      String?        @unique
  rolesByPeriod RoleByPeriod[] @relation("MemberRoles")

  @@map("members")
}

model RoleByPeriod {
  member   Member   @relation("MemberRoles", fields: [memberId], references: [id])
  memberId Int      @map("member_id")
  period   String
  role     RoleEnum

  @@id([memberId, period])
  @@map("roles_by_period")
}
